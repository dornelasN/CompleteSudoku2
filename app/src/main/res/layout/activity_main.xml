<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.enkhturbadamsaikhan.completesudoku.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/my_toolbar">


    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/logo_small"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_height="wrap_content" />

        <TextView
            android:text="@string/tv_newSudoku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_newSudoku"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="64dp">

            <Button
                android:text="@string/easyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/easyButton"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1" />

            <Button
                android:text="@string/mediumButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mediumButton"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <Button
                android:text="@string/hardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hardButton"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1" />

            <Button
                android:text="@string/extremeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/extremeButton"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:text="@string/tv_loadSudoku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_loadSudoku"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/savedSudokuButton"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:text="@string/savedSudokuButton"
                android:textSize="10sp"/>

            <Button
                android:text="@string/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uploadButton"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:textSize="10sp"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
