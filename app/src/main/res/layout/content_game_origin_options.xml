<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.enkhturbadamsaikhan.completesudoku.GameOriginOptionsActivity"
    tools:showIn="@layout/activity_game_origin_options"
    android:background="@drawable/background2_image">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo_small"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_logo" />

        <TextView
            android:id="@+id/singlePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:typeface="sans"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#000075"
            android:text="Single Player" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:text="@string/fromSudokuGeneratorButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/from_sudoku_generator_text"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:typeface="sans"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000075"
                android:textAlignment="center"

                android:layout_weight="1" />

            <TextView
                android:layout_gravity="center"
                android:text="@string/fromCameraButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/from_camera_text"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:typeface="sans"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000075"
                android:textAlignment="center"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>